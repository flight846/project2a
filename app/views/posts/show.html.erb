<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <h1>Post</h1>
  <hr />
    <div class="row post">
      <div class="col-md-2">
        <!--Number of comments-->
      </div>
      <div class="col-md-10">
        <div>
          <h2>Title: <%= @post.title %></h2>
        </div>
        <div>
          <p>Body: <%= @post.body %></p>
        </div>
        <div class="row">
          <%= link_to 'Edit', edit_user_post_path(params[:user_id], @post) %> |
          <%= link_to 'Back', posts_path %>
          <hr />
        </div>
      </div>
    </div>
</div>